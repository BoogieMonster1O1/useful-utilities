{
  "schemaVersion": 1,
  "id": "utilmod",
  "version": "${version}",

  "name": "Utilities Mod",
  "description": "A mod that adds a number of useful utilities to the Options Menu",
  "authors": [
    "BoogieMonster1O1"
  ],
  "contact": {
    "homepage": "https://boogiemonster1o1.github.io",
    "sources": "https://github.com/BoogieMonster1O1/useful-utilities"
  },

  "license": "CC0-1.0",
  "icon": "assets/utilmod/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "boogie.utilmod.UtilitiesMod"
    ],
    "client": [
      "boogie.utilmod.UsefulUtilitiesClient"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "jars": [
    {
      "file":"libgui"
    }
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.15.x",
    "libgui": "*"
  },
  "suggests": {
    "flamingo": "*"
  }
}
